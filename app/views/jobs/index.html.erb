<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>Idea</th>
      <th>Description</th>
      <!--<th>Who made Idea</th>-->
      <th>User who applied for job</th>
      <th>Filled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.role.name %></td>
        <td><%= job.idea.name %></td>
        <td><%= job.idea.description %></td>
        <!--<td><%= job.created_id %></td>-->
        
        <% if job.user_id != 0 %>
          <td><%= job.user.username %></td>
        <% else %>
          <td> </td>
        <% end %>

        <td><%= job.filled %></td>
        <td><%= link_to 'Show', job %></td>


        
        <% if job.created_id != current_user.id && job.filled == false %>

          <td><%= link_to 'Apply For Job', apply_path(job.id) %></td>

        <% end %> 

      </tr>
    <% end %>
  </tbody>
</table>

<br>
