<%= simple_form_for(@idea) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :skills %>
    <%= f.input :add_information %>
    <%= f.association :platform, as: :radio_buttons%>

    <% for role in Role.all  %>
      <p> <%= check_box_tag 'role_check[]', role.id %> <%= role.name %></p>
    <% end  %>


  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>